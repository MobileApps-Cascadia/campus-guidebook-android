<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="edu.cascadia.mobas.campusguidebook.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/home" >
        <action
            android:id="@+id/action_nav_home_to_nav_events"
            app:destination="@id/nav_events" />
        <action
            android:id="@+id/action_nav_home_to_nav_sust_list"
            app:destination="@id/nav_sust_list" />
        <action
            android:id="@+id/action_nav_home_to_nav_clubs"
            app:destination="@id/nav_clubs"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>


    <fragment
        android:id="@+id/nav_events"
        android:name="edu.cascadia.mobas.campusguidebook.ui.events.ListFragment"
        android:label="@string/menu_events"
        tools:layout="@layout/event_list" >
        <action
            android:id="@+id/action_nav_events_to_fragment_Event_Info"
            app:destination="@id/fragment_Event_Info" />
        <action
            android:id="@+id/action_nav_events_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_events_to_addEventFragment"
            app:destination="@id/addEventFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_sust_list"
        android:name="edu.cascadia.mobas.campusguidebook.ui.Sustainability.ListFragment"
        android:label="@string/menu_sust_list"
        tools:layout="@layout/sust_list" >
        <action
            android:id="@+id/action_nav_sustainability_list_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/fragment_Event_Info"
        android:name="edu.cascadia.mobas.campusguidebook.Fragment_Event_Info"
        android:label="Event Info"
        tools:layout="@layout/fragment__event__info" >
        <action
            android:id="@+id/action_fragment_Event_Info_to_nav_events"
            app:destination="@id/nav_events" />
    </fragment>
    <fragment
        android:id="@+id/nav_clubs"
        android:name="edu.cascadia.mobas.campusguidebook.ui.clubs.ListFragment"
        android:label="fragment_club_list"
        tools:layout="@layout/list_view" >
        <action
            android:id="@+id/action_nav_clubs_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_clubs_to_nav_club_details"
            app:destination = "@+id/nav_club_details" />
    </fragment>
    <fragment android:id="@+id/nav_club_details"
        android:name="edu.cascadia.mobas.campusguidebook.ui.clubs.DetailsFragment"
        android:label="fragment_club_details"
        tools:layout="@layout/list_view_details" >
        <action
            android:id="@+id/action_nav_club_details_to_nav_clubs"
            app:destination="@id/nav_clubs" />
    </fragment>
    <fragment
        android:id="@+id/addEventFragment"
        android:name="edu.cascadia.mobas.campusguidebook.ui.events.AddEventFragment"
        android:label="fragment_add_event"
        tools:layout="@layout/add_event" >
        <action
            android:id="@+id/action_addEventFragment_to_nav_events"
            app:destination="@id/nav_events" />
    </fragment>
</navigation>