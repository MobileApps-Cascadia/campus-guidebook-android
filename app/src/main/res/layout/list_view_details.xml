<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cascadia.mobas.campusguidebook.ui.clubs.ClubDetailsFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_details"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:src="@drawable/default_image" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_button_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            app:cardBackgroundColor="@color/gray_1"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:id="@+id/layout_button_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:text="Today, 10:00 AM"
                    android:textColor="@color/black"
                    app:icon="@android:drawable/ic_menu_my_calendar"
                    app:iconTint="@color/black" />

                <Button
                    android:id="@+id/button_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:text="Arc 201"
                    android:textColor="@color/black"
                    app:icon="@android:drawable/ic_dialog_map"
                    app:iconTint="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layout_details_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/textview_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/nav_header_title"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textview_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:text="@string/lorem_ipsum_long"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/layout_property_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="3dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textview_property_1_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property1"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": "
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_property_1_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value of Property1"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_property_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="3dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textview_property_2_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property2"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": "
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_property_2_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value of Property2"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_property_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="3dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textview_property_3_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property3"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": "
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_property_3_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value of Property3"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"></LinearLayout>
    </LinearLayout>
</ScrollView>