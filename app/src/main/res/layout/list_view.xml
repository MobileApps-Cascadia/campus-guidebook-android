<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BaseListFragment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end|bottom"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2196F3"
            android:clickable="true"
            android:foregroundTint="#FFFFFF"
            android:src="@drawable/ic_baseline_add_24"
            android:tint="#FFFFFF"
            app:fabSize="auto"
            android:visibility="invisible"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title2"
            android:layout_marginTop="15dp">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/title2"
            android:layout_width="412dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="0dp"
            android:text="CLUBS AT CASCADIA"
            android:textAlignment="center"
            android:textColor="#012F6C"
            android:textColorHighlight="#012F6C"
            android:textColorHint="#012F6C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc1"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Title1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="67dp"
            android:text="@string/club_list_desc"
            android:textAlignment="center"
            android:textColor="#012F6C"
            android:textColorHighlight="#012F6C"
            android:textColorHint="#012F6C"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="0dp"
            android:text="STUDENT LIFE"
            android:textAlignment="center"
            android:textColor="#012F6C"
            android:textColorHighlight="#012F6C"
            android:textColorHint="#012F6C"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
